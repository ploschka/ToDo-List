{% extends 'base.html.twig' %}

{% block title %}ToDO List{% endblock %}

{% block body %}
<div class="content">
    <h1>ToDo List</h1>

    {{ form(todo_form) }}

    {% for todo in todos %}
        <div {{ stimulus_controller('todo') }} class="todo">
            {{ todo.text }}
            <button class="delbutton" {{ stimulus_action('todo', 'delete') }} data-todo-id-param="{{ todo.id }}">
                Удалить
            </button>
        </div>
    {% endfor %}
</div>
{% endblock %}
